<?xml version="1.0"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1" metadata-complete="false">
	<display-name>Archetype Created Web Application</display-name>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:applicationContext.xml</param-value>
	</context-param>
	<filter>
		<filter-name>oemInViewFilter</filter-name>
		<filter-class>
			org.springframework.orm.jpa.support.OpenEntityManagerInViewFilter
		</filter-class>
		<init-param>
       		<param-name>entityManagerFactoryBeanName</param-name>
       		<param-value>entityManagerFactory</param-value>
    	</init-param>
    	<init-param>
        	<param-name>singleSession</param-name>
        	<param-value>true</param-value>
    	</init-param>
    	<init-param>
        	<param-name>flushMode</param-name>
        	<param-value>AUTO</param-value>
    	</init-param>
	</filter>
	<filter-mapping>
		<filter-name>oemInViewFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<servlet>
		<description>
		</description>
		<display-name>EjemploUsers</display-name>
		<servlet-name>EjemploUsers</servlet-name>
		<servlet-class>wad.cart.ramos.diaz.servlets.EjemploUsers</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>EjemploProducts</display-name>
		<servlet-name>EjemploProducts</servlet-name>
		<servlet-class>wad.cart.ramos.diaz.servlets.EjemploProducts</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>EjemploOrders</display-name>
		<servlet-name>EjemploOrders</servlet-name>
		<servlet-class>wad.cart.ramos.diaz.servlets.EjemploOrders</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>EjemploCreditCard</display-name>
		<servlet-name>EjemploCreditCard</servlet-name>
		<servlet-class>wad.cart.ramos.diaz.servlets.EjemploCreditCard</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>ViewUser</display-name>
		<servlet-name>ViewUser</servlet-name>
		<servlet-class>wad.cart.ramos.diaz.servlets.ViewUser</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>EjemploUsers</servlet-name>
		<url-pattern>/EjemploUsers</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>EjemploProducts</servlet-name>
		<url-pattern>/EjemploProducts</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>EjemploOrders</servlet-name>
		<url-pattern>/EjemploOrders</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>EjemploCreditCard</servlet-name>
		<url-pattern>/EjemploCreditCard</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ViewUser</servlet-name>
		<url-pattern>/ViewUser</url-pattern>
	</servlet-mapping>
